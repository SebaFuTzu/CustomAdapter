<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#0B173B">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:paddingTop="30sp"
        android:orientation="horizontal"
        android:gravity="center|center">

        <Button
            android:id="@+id/btnLista"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@mipmap/icono_blue"
            android:gravity="center|center"
            android:paddingBottom="20sp"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"
            android:paddingTop="20sp"
            android:onClick="generarLista"/>

        <TextView
            android:id="@+id/txtLista"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            android:gravity="center|center"
            android:text="@string/textoLista"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:paddingBottom="30sp"
        android:orientation="horizontal"
        android:gravity="center|center">

        <Button
            android:id="@+id/btnGrilla"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"
            android:paddingTop="20sp"
            android:paddingBottom="20sp"
            android:gravity="center|center"
            android:background="@mipmap/icono_red"
            android:onClick="generarGrilla"/>

        <TextView
            android:id="@+id/txtGrilla"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            android:gravity="center|center"
            android:text="@string/textoGrilla"
            />

    </LinearLayout>

</LinearLayout>
